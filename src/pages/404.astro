---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

  
<Layout title="404 Not Found">
    <body>
		<h1> <span class="text-gradient"> 404 Error </span> - this page was not found :( </h1> 
		<h2>... or under construction. Please come back later!</h2>
	</body>
</Layout>

<style>
	body {
		margin: auto;
		padding: 1.5rem;
		max-width:120ch;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}

    h2 {
		font-size: 1.5rem;
		font-weight: 500;
		margin: 0;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
