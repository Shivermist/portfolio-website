---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
import NavBar from '../components/NavBar.astro';

---

<Layout title="Welcome to Astro.">
	<NavBar />
	<Header
		name="Claire Kim"
		job="Computer Engineer"
		desc="Hi! I'm Claire Kim, an aspiring computer engineer. I'm currently studying at McMaster University."
		image="computer_storyset.jpg"
	/>
	
	<main>
		<p class="instructions">
			Hi! I'm Claire Kim, an aspiring computer engineer. I'm currently studying at McMaster University. <br />

			
			To get started, open the directory <code>src/pages</code> in your project.<br />
			<strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
		</p>
		<h1 style="padding-top: 50px;"> Integrated Cornerstone Design Projects </h1>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="Renewable Energy Challenge"
				body="..."
				imageSrc="windmill.jpg"
			/>
			<Card
				href="https://docs.astro.build/"
				title="Get A Grip"
				body="..."
				imageSrc="QLabs-Robotics-Sorting.png"
			/>
		</ul>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="Revenge of the Recycling System"
				body="..."
				imageSrc="QArm-Virtual-Sorting.jpg"
			/>
			<Card
				href="https://docs.astro.build/"
				title="Electromagnetic Gripper"
				body="..."
				imageSrc="electromagnetic_gripper.jpg"
			/>
		</ul>
		<h1 style="padding-top: 50px; padding-bottom: 15px;"> LIDAR Scanner for Spacial Mapping </h1>
		<Card
			href="https://docs.astro.build/"
			title="Renewable Energy Challenge"
			body="..."
			imageSrc="LIDAR-Scanner.jpg"
		/>


	</main>
</Layout>

<style>
		
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 120ch;
		
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
		text-align: left;
	}

	h2 {
		font-size: 2rem;
		font-weight: 500;
		margin: 0;
		text-align: left;

	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
