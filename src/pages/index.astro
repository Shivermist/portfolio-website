---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

// import "../styles/index.css";
---

<Layout title="Claire Kim's Website">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <NavBar />
  <Header
    name="Claire Kim"
    job="Computer Engineer"
    desc="I'm currently studying computer engineering at McMaster University. I have experience in hardware, programming, and the arts such as graphic design. Check out my works below!"
    image="computer_storyset.jpg"
  />


  <main>
    <h1 style="padding-top: 3.4em;">Integrated Cornerstone Design Projects</h1>
    <ul role="list" class="link-card-grid">
      <Card
        href="https://cgkim.notion.site/Summary-of-Experience-d84f2f4c7b344e1f8492cdae1a045bd1"
        title="Renewable Energy Challenge"
        body="..."
        imageSrc="windmill.jpg"
      />
      <Card
        href="https://cgkim.notion.site/Summary-of-Experience-807cb5d6c3b14bee8afb4015416727ce"
        title="Get A Grip"
        body="..."
        imageSrc="QLabs-Robotics-Sorting.png"
      />
    </ul>
    <ul role="list" class="link-card-grid">
      <Card
        href="https://www.notion.so/cgkim/Summary-of-Experience-3-80d444d4965748869a877591cce5c0b1?pvs=4"
        title="Revenge of the Recycling System"
        body="..."
        imageSrc="QArm-Virtual-Sorting.jpg"
      />
      <Card
        href="https://cgkim.notion.site/Summary-of-Experience-4-a26d9cbbb533406f9534febe9c427d31"
        title="Electromagnetic Gripper"
        body="..."
        imageSrc="electromagnetic_gripper.jpg"
      />
    </ul>
    <h1 style="padding-top: 1em; padding-bottom: 0.5em;">
      LIDAR Scanner for Spatial Mapping
    </h1>
    <Card
      href="https://cgkim.notion.site/Microprocessor-Project-102a03d0003541ba84df375313a5d59a"
      title="Microprocessor Systems Design Project"
      body="..."
      imageSrc="LIDAR-Scanner.jpg"
    />
  </main>

  <Footer />
</Layout>

<style>
  
  body {
    background-color: white;
  }

  main {
    margin: auto;
    padding: 1.5em;
    max-width: 120ch;
  }
  h1 {
    font-size: clamp(0.5em, 4vw, 2.7em);
    font-weight: 800;
    margin: 0;
    text-align: left;
    color: rgb(70, 70, 70);
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1em;
    padding: 0;
  }

  @media screen and (max-width: 700px) {
  .link-card-grid {
    grid-template-columns: 1fr;
    grid-template-rows: auto auto;

  }
  .column {
    grid-row: auto;
  }

}


</style>
