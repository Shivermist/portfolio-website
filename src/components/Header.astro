---
import { Image, getImage } from 'astro:assets';

export interface Props {
	name: string;
	job: string;
	desc: string;
    image: string;
}

const { name, job, desc, image} = Astro.props;
---
<div class="grid">
    <div class="column">
        <!-- Content for first column -->
        <h1> Hi I'm  <span class="text-gradient"> {name} </span> </h1>
        <h2> {job} </h2>
        <p> {desc} </p>
    </div>
    <div class="column">
        <!-- Content for second column -->
        <img src={image} alt="header" />
    </div>
</div>

<style>
    .grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  	}

	.column {
		/* how to do top padding */
		text-align:left;
		padding-left: 13rem;
	}

	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
		text-align: left;
        padding-top: 10rem;
	}

	h2 {
		font-size: 2rem;
		font-weight: 500;
		margin: 0;
		text-align: left;

	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	
	img {
        width: 60%;
        height: auto;
        padding-top: 5rem;
	}

</style>
