---
import { Image, getImage } from "astro:assets";

export interface Props {
  name: string;
  job: string;
  desc: string;
  image: string;
}

const { name, job, desc, image } = Astro.props;

import "../styles/Header.css";
---

<div class="grid">
  <div class="column">
    <!-- Content for first column -->
    <h1>Hi I'm <span class="text-gradient"> {name}</span></h1>
    <h2>{job}</h2>
    <p>{desc}</p>
    <br />
    <a href="resume_Claire_Kim.pdf" target="_blank">
      <button class="button">Resume</button>
    </a>
  </div>
  <div class="column">
    <!-- Content for second column -->
    <img src={image} alt="header" />
  </div>
</div>
